@model WebNC_Project.ViewModel.LoginModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Areas/Server/Views/Shared/_LayoutLogin.cshtml";
}

<div class="login-box">
    <div class="logo">
        <a href="javascript:void(0);"><b>NG - Resort</b></a>
        <small>Server web pages to management resort</small>
    </div>
    <div class="card">
        <div class="body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="msg">Sign in to start your session</div>
                <div class="input-group">
                    <span class="input-group-addon">
                        <i class="material-icons">person</i>
                    </span>
                    <div class="form-line">
                        @Html.EditorFor(m => m.Username, new { htmlAttributes = new { @class = "form-control", @autofocus = true, @placeholder = "Username" } })
                    </div>
                    @Html.ValidationMessageFor(m => m.Username,null, new { @class = "text-danger" })
                </div>
                <div class="input-group">
                    <span class="input-group-addon">
                        <i class="material-icons">lock</i>
                    </span>
                    <div class="form-line">
                        @Html.EditorFor(m => m.Password, new { htmlAttributes = new { @class = "form-control", @placeholder = "Password" } })
                    </div>
                    @Html.ValidationMessageFor(m => m.Password, null, new { @class = "text-danger" })
                </div>
                <div class="row">
                    <div class="col-xs-12">
                        <button class="btn btn-block bg-pink waves-effect" type="submit">SIGN IN</button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>