@model WebNC_Project.Models.RoomType
<form id="editForm">
    @Html.AntiForgeryToken()
    <div class="modal-header">
        <h4 class="modal-title">EDIT INFORMATION FOR @Html.DisplayFor(m => m.ID)</h4>
    </div>
    <div class="modal-body">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(s => s.ID)
        @Html.LabelFor(s => s.NameType)
        <div class="form-group">
            <div class="form-line">
                @Html.EditorFor(s => s.NameType, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            @Html.ValidationMessageFor(s => s.NameType, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-success waves-effect" onclick="Edit()">UPDATE</button>
        <button type="button" class="btn btn-danger waves-effect" data-dismiss="modal">CLOSE</button>
    </div>
</form>
