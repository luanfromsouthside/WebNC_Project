@model WebNC_Project.Models.SuppliesForRoom

<form id="modalForm">
    @Html.AntiForgeryToken()
    <div class="modal-header">
        <h4 class="modal-title">SUPPLY @Model.SupplyID IN @Model.RoomID</h4>
    </div>
    <div class="modal-body">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.SupplyID)
        @Html.HiddenFor(model => model.RoomID)
        <div class="form-group">
            <div class="form-line">
                @Html.EditorFor(s => s.Count, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            @Html.ValidationMessageFor(s => s.Count, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-success waves-effect" onclick="RemoveSP()">SUBMIT</button>
        <button type="button" class="btn btn-danger waves-effect" data-dismiss="modal">CLOSE</button>
    </div>
</form>