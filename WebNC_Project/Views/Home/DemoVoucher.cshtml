@model IEnumerable<WebNC_Project.Models.Voucher>

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="section-title">
                <span>Vouchers</span>
                <h2>Some offer for you</h2>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-8 offset-lg-2">
            <div class="testimonial-slider owl-carousel">
                @foreach (var v in Model)
                {
                    <div class="ts-item">
                        <p>
                            This offer is use from @v.FromDate.ToString("dd/MM/yyyy") to @v.ToDate.ToString("dd/MM/yyyy")
                        </p>
                        <p>
                            Apply to bill with a minimum value of @v.Condition
                        </p>
                        <div class="ti-author">
                            <p>Discount @v.Discount %</p>
                            <h5>CODE : @v.Code</h5>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<script>
    $(".testimonial-slider").owlCarousel({
        items: 1,
        dots: false,
        autoplay: true,
        loop: true,
        smartSpeed: 2000,
        nav: true,
        navText: ["<i class='arrow_left'></i>", "<i class='arrow_right'></i>"]
    });
</script>
